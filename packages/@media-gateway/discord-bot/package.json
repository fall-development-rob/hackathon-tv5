{
  "name": "@media-gateway/discord-bot",
  "version": "1.0.0",
  "description": "Discord bot with MCP client integration for Media Gateway",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "migrate": "node -r tsx/register scripts/run-migrations.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@media-gateway/core": "workspace:*",
    "@media-gateway/database": "workspace:*",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "axios": "^1.6.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "discord",
    "bot",
    "mcp",
    "media-gateway",
    "anthropic",
    "claude"
  ],
  "license": "MIT"
}
