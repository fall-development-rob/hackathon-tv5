{
  "name": "@media-gateway/mcp-server",
  "version": "0.1.0",
  "description": "MCP server implementation for Media Gateway with dual transport support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "media-gateway-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start:stdio": "node dist/index.js stdio",
    "start:sse": "node dist/index.js sse",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./tools": {
      "types": "./dist/tools.d.ts",
      "import": "./dist/tools.js"
    }
  },
  "dependencies": {
    "@media-gateway/core": "workspace:*",
    "@media-gateway/agents": "workspace:*",
    "@media-gateway/database": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "express": "^5.2.1",
    "zod": "^3.23.0",
    "agentdb": "^2.0.0-alpha.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "media-gateway",
    "multi-agent",
    "q-learning",
    "reinforcement-learning"
  ],
  "license": "Apache-2.0"
}
