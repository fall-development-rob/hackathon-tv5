{
  "name": "@media-gateway/database",
  "version": "0.1.0",
  "description": "Database layer with AgentDB cognitive memory and RuVector embeddings for 20-year data moat",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./agentdb": {
      "types": "./dist/agentdb/index.d.ts",
      "import": "./dist/agentdb/index.js"
    },
    "./ruvector": {
      "types": "./dist/ruvector/index.d.ts",
      "import": "./dist/ruvector/index.js"
    },
    "./postgres": {
      "types": "./dist/postgres/index.d.ts",
      "import": "./dist/postgres/index.js"
    }
  },
  "dependencies": {
    "@media-gateway/core": "workspace:*",
    "agentdb": "^2.0.0-alpha.2.18",
    "pg": "^8.13.0",
    "ruvector": "^0.1.31"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "@vitest/coverage-v8": "^2.1.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "agentdb",
    "ruvector",
    "vector-database",
    "cognitive-memory",
    "data-moat"
  ],
  "license": "Apache-2.0"
}
